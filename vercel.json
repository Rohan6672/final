{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "*.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/",
      "dest": "index.html"
    },
    {
      "src": "/about",
      "dest": "about.html"
    },
    {
      "src": "/movies",
      "dest": "movies.html"
    },
    {
      "src": "/(.*)",
      "dest": "public/$1"
    }
  ]
}